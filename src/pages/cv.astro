---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const pageTitle = `CV | ${SITE_TITLE}`;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={pageTitle} description="Curriculum Vitae of Ali Ahmadi - PhD Candidate in Management (Strategy) at Smith School of Business, Queen's University." />
  </head>
  <body>
    <Header />
    
    <main>
      <!-- Page Header with Hero Background -->
      <section class="page-header">
        <div class="page-header-bg">
          <img src="/hero-bg.jpg" alt="" class="page-header-bg-image" />
          <div class="page-header-overlay"></div>
        </div>
        <div class="container">
          <h1>Curriculum Vitae</h1>
          <p class="page-intro">Download my full CV or view it below.</p>
          <div class="cv-actions">
            <a href="/AliAhmadi_CV.pdf" download class="btn-primary">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
              </svg>
              <span>Download CV (PDF)</span>
            </a>
          </div>
        </div>
      </section>

      <!-- CV Viewer -->
      <section class="cv-viewer section">
        <div class="container">
          <div class="pdf-container">
            <iframe 
              src="/AliAhmadi_CV.pdf" 
              title="Ali Ahmadi CV"
              loading="lazy"
            ></iframe>
          </div>
          <p class="pdf-fallback">
            Can't see the PDF? <a href="/AliAhmadi_CV.pdf" download>Download it directly</a>.
          </p>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>

<style>
  .page-header {
    position: relative;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
  }

  .page-header-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .page-header-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .page-header-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.88) 0%,
      rgba(248, 250, 252, 0.82) 50%,
      rgba(226, 232, 240, 0.78) 100%
    );
  }

  .page-header .container {
    position: relative;
    z-index: 1;
  }

  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .page-intro {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .cv-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-primary svg {
    flex-shrink: 0;
  }

  .cv-viewer {
    padding: 3rem 0;
    background: linear-gradient(180deg, var(--gray-light) 0%, #e8eef4 100%);
  }

  .cv-viewer .container {
    max-width: 1000px;
  }

  .pdf-container {
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    overflow: hidden;
    height: 85vh;
    min-height: 700px;
  }

  .pdf-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .pdf-fallback {
    text-align: center;
    margin-top: 1.5rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .pdf-fallback a {
    color: var(--primary);
  }
</style>
