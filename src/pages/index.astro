---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    
    <main>
      <!-- Hero Section -->
      <section class="hero">
        <div class="hero-bg">
          <img src="/hero-bg.jpg" alt="" class="hero-bg-image" />
          <div class="hero-overlay"></div>
        </div>
        <div class="container">
          <div class="hero-content">
            <div class="hero-image">
              <img src="/profile.jpg" alt="Ali Ahmadi" />
            </div>
            <div class="hero-text">
              <h1>Ali Ahmadi</h1>
              <p class="hero-subtitle">PhD Candidate in Management – Strategy</p>
              <p class="hero-institution">Smith School of Business – Queen's University</p>
              <div class="hero-cta">
                <a href="/research" class="btn-primary"><span>Research</span></a>
                <a href="/contact" class="btn-secondary">Contact Me</a>
              </div>
            </div>
          </div>
        </div>
        <div class="scroll-indicator">
          <span></span>
        </div>
      </section>

      <!-- Bio Section -->
      <section class="bio section">
        <div class="container">
          <p class="bio-text">
            I'm a fifth-year Ph.D. candidate specializing in competitive dynamics. My dissertation focuses on how competitive surprises influence performance and affect rival responses. I use natural language processing, large language models, and case study methods to empirically investigate the element of surprise in strategic management.
          </p>
          <p class="bio-text">
            I also teach strategic management, where I integrate AI-driven simulations, real-world case studies, and live industry challenges into my courses.
          </p>
        </div>
      </section>

      <!-- Research Preview -->
      <section class="research-preview">
        <div class="container">
          <div class="section-header">
            <span class="section-label">My Focus Areas</span>
            <h2>Research</h2>
          </div>
          <div class="research-areas">
            <div class="research-card">
              <div class="research-image-wrapper">
                <img src="research-1.png" alt="Competitive Surprise" class="research-image" />
              </div>
              <div class="research-content">
                <h3>Competitive Surprise</h3>
                <p>How firms identify, process, and respond to unexpected rival moves in competitive markets.</p>
              </div>
            </div>
            <div class="research-card">
              <div class="research-image-wrapper">
                <img src="research-2.png" alt="Positioning Threats" class="research-image" />
              </div>
              <div class="research-content">
                <h3>Positioning Threats</h3>
                <p>Understanding how organizations navigate and respond to direct challenges to their market position.</p>
              </div>
            </div>
            <div class="research-card">
              <div class="research-image-wrapper">
                <img src="research-3.png" alt="Competitive Dynamics" class="research-image" />
              </div>
              <div class="research-content">
                <h3>Competitive Dynamics</h3>
                <p>Exploring the interplay between firms as they compete and respond to each other in dynamic environments.</p>
              </div>
            </div>
          </div>
          <div class="section-cta">
            <a href="/research" class="btn-primary"><span>View All Research</span></a>
          </div>
        </div>
      </section>

      <!-- Teaching Preview -->
      <section class="teaching-preview section">
        <div class="container">
          <div class="teaching-grid">
            <!-- Left Column: Teaching Experience -->
            <div class="teaching-experience">
              <h2>Teaching Experience</h2>
              <div class="course-card">
                <h3>COMM401: Strategic Management</h3>
                <p class="course-details">Instructor | Fall 2024 & 2025</p>
                <p>A capstone strategy course with 85 students, featuring AI-powered business simulations (Capsim), real-world live cases, and executive speaker series.</p>
                <div class="course-stats">
                  <div class="stat">
                    <span class="stat-value">6.23/7</span>
                    <span class="stat-label">Teaching Evaluation</span>
                  </div>
                  <div class="stat">
                    <span class="stat-value">85</span>
                    <span class="stat-label">Students</span>
                  </div>
                </div>
              </div>
              <div class="section-cta">
                <a href="/teaching" class="btn-primary"><span>View Teaching</span></a>
              </div>
            </div>
            <!-- Right Column: AI Case Method -->
            <div class="ai-case-method">
              <h2>AI Case Method</h2>
              <p class="method-subtitle">An innovative method to teach case studies in the age of artificial intelligence.</p>
              <p class="method-description">Integrating AI tools into traditional case-based learning to prepare students for the future of strategic decision-making.</p>
              <div class="method-buttons">
                <a href="/teaching" class="btn-primary"><span>View More</span></a>
                <a href="https://livecases.org" target="_blank" rel="noopener" class="btn-secondary">Visit LiveCases.org</a>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>

<style>
  /* Hero Section */
  .hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.75) 0%,
      rgba(248, 250, 252, 0.65) 50%,
      rgba(226, 232, 240, 0.55) 100%
    );
  }

  .hero .container {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 2.5rem;
    padding: 2rem 0;
  }

  .hero-image {
    width: 220px;
    height: 220px;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.35);
    border: 6px solid var(--white);
    flex-shrink: 0;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-text h1 {
    font-size: 3.5rem;
    margin-bottom: 0.75rem;
    color: var(--text-dark);
    letter-spacing: -0.02em;
    text-shadow: 0 2px 4px rgba(255,255,255,0.5);
  }

  .hero-subtitle {
    font-size: 1.35rem;
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .hero-institution {
    font-size: 1.125rem;
    color: var(--text-dark);
    margin-bottom: 2rem;
    opacity: 0.8;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .scroll-indicator span {
    display: block;
    width: 24px;
    height: 40px;
    border: 2px solid var(--text-dark);
    border-radius: 12px;
    position: relative;
    opacity: 0.5;
  }

  .scroll-indicator span::before {
    content: '';
    position: absolute;
    top: 6px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: var(--text-dark);
    border-radius: 2px;
    animation: scrollDown 1.5s infinite;
  }

  @keyframes scrollDown {
    0% { opacity: 1; top: 6px; }
    100% { opacity: 0; top: 20px; }
  }

  @media (min-width: 768px) {
    .hero-content {
      flex-direction: row;
      text-align: left;
      gap: 4rem;
    }

    .hero-image {
      width: 300px;
      height: 300px;
    }

    .hero-text h1 {
      font-size: 4.5rem;
    }

    .hero-cta {
      justify-content: flex-start;
    }
  }

  /* Bio Section */
  .bio {
    background: var(--white);
  }

  .bio-text {
    font-size: 1.125rem;
    line-height: 1.8;
    max-width: 800px;
    margin: 0 auto 1.5rem;
    text-align: center;
  }

  .bio-text:last-child {
    margin-bottom: 0;
  }

  /* Research Preview */
  .research-preview {
    background: linear-gradient(180deg, #0d104a 0%, #000000 100%);
    padding: 6rem 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-label {
    display: inline-block;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .research-preview h2 {
    color: var(--white);
    font-size: 2.5rem;
  }

  .research-areas {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .research-card {
    text-align: center;
  }

  .research-image-wrapper {
    width: 180px;
    height: 180px;
    margin: 0 auto 2.5rem;
    transform: rotate(45deg);
    overflow: hidden;
    border: 3px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    transition: all 0.4s ease;
  }

  .research-card:hover .research-image-wrapper {
    border-color: var(--primary);
    box-shadow: 0 25px 50px rgba(0, 103, 255, 0.3);
    transform: rotate(45deg) scale(1.1);
  }

  .research-image {
    width: 140%;
    height: 140%;
    object-fit: cover;
    transform: rotate(-45deg) scale(1.1);
    transform-origin: center center;
    margin-left: -20%;
    margin-top: -20%;
  }

  .research-content h3 {
    color: var(--white);
    font-size: 1.35rem;
    margin-bottom: 0.75rem;
  }

  .research-content p {
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    line-height: 1.6;
  }

  .research-preview .section-cta {
    text-align: center;
  }

  /* Teaching Preview */
  .teaching-preview {
    background: var(--white);
  }

  .teaching-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 900px) {
    .teaching-grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .teaching-experience h2,
  .ai-case-method h2 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  .ai-case-method {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .method-subtitle {
    font-size: 1.25rem;
    color: var(--primary);
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .method-description {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .method-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .teaching-experience .section-cta {
    margin-top: 1.5rem;
    text-align: left;
  }

  .course-card {
    background: var(--gray-light);
    padding: 2rem;
    border-radius: 16px;
    border-left: 4px solid var(--primary);
  }

  .course-card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .course-details {
    color: var(--primary);
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .course-stats {
    display: flex;
    gap: 2rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--gray-border);
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
    font-family: 'Playfair Display', Georgia, serif;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--text-light);
  }

  /* Section CTA */
  .section-cta {
    text-align: center;
  }
</style>
